<Window x:Class="matome_phase1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:matome_phase1"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1000"
        WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="実行" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top" Width="50" Click="ScrapingBtn_Click"/>
        <Button Grid.Column="1" Content="Clear" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top" Width="50" Click="ClearBtn_Click"/>
        <TextBlock Grid.Column="2" Text="{Binding SiteName}" FontSize="24" FontWeight="Bold" Margin="20,20,0,0"/>
        <TextBlock Grid.Column="2" Text="{Binding URL}" FontSize="18" Margin="20,50,0,0"/>
        <DataGrid 
            x:Name="ItemsDataGrid"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="0,80,0,0"
            ItemsSource="{Binding CurrentItems}"
            AutoGenerateColumns="True"
            AutoGeneratingColumn="ItemsDataGrid_AutoGeneratingColumn"/>
    </Grid>
</Window>
